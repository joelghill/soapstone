{
  "name": "soapstone",
  "packageManager": "yarn@4.9.2",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "build": "tsup",
    "start": "node dist/index.js",
    "lexgen": "lex gen-server ./src/lexicon $(find ./lexicons -type f -iname \"*.json\")",
    "clean": "rimraf dist coverage",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:make": "knex migrate:make",
    "db:check": "node scripts/check-db.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "docker:build": "docker-compose build",
    "docker:restart": "docker-compose restart app"
  },
  "dependencies": {
    "@atproto/api": "^0.15.23",
    "@atproto/common": "^0.4.11",
    "@atproto/identity": "^0.4.8",
    "@atproto/lexicon": "^0.4.11",
    "@atproto/oauth-client-node": "^0.3.2",
    "@atproto/sync": "^0.1.28",
    "@atproto/syntax": "^0.4.0",
    "@atproto/xrpc-server": "^0.8.0",
    "dotenv": "^17.2.0",
    "envalid": "^8.0.0",
    "express": "^5.1.0",
    "iron-session": "^8.0.4",
    "knex": "^3.1.0",
    "knex-postgis": "^0.14.3",
    "multiformats": "^13.3.7",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "uhtml": "^4.7.1"
  },
  "devDependencies": {
    "@atproto/lex-cli": "^0.8.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.2",
    "knex-mock-client": "^3.0.2",
    "pino-pretty": "^13.0.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
