<div class="container-fluid py-4">
    <header class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom border-secondary">
        <h1 class="display-4 text-primary mb-0">Soapstone</h1>
        <nav class="navbar-nav">
            {{#if profile}}
                <div class="d-flex align-items-center gap-3">
                    <span class="navbar-text">
                        Welcome, {{#if profile.displayName}}{{profile.displayName}}{{else}}User{{/if}}
                    </span>
                    <form method="post" action="/logout" class="d-inline">
                        <button type="submit" class="btn btn-outline-secondary btn-sm">Logout</button>
                    </form>
                </div>
            {{/if}}
        </nav>
    </header>

    <section class="content">
        {{#if profile}}
            {{>create-post}}
            
            <h2 class="h3 mb-4">Recent Posts</h2>
            
            {{#if posts}}
                <div class="row">
                    <div class="col-12">
                        {{#each posts}}
                            <article class="card bg-dark border-secondary mb-4">
                                <div class="card-body">
                                    <div class="card-header bg-transparent border-0 px-0 pt-0">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div class="post-author">
                                                {{#if (lookup ../didHandleMap this.authorDid)}}
                                                    <a href="{{toBskyLink (lookup ../didHandleMap this.authorDid)}}" 
                                                       target="_blank" 
                                                       rel="noopener noreferrer"
                                                       class="text-primary text-decoration-none fw-semibold">
                                                        @{{lookup ../didHandleMap this.authorDid}}
                                                    </a>
                                                {{else}}
                                                    <span class="font-monospace text-muted small">{{this.authorDid}}</span>
                                                {{/if}}
                                            </div>
                                            <div class="d-flex align-items-center gap-3 text-muted small">
                                                <time datetime="{{this.createdAt}}" class="text-muted">
                                                    {{formatDate this.createdAt}}
                                                </time>
                                                {{#if this.location}}
                                                    <span class="d-flex align-items-center gap-1">
                                                        <i class="bi bi-geo-alt-fill"></i>
                                                        <a href="{{this.location_text}}" target="_blank" rel="noopener noreferrer" class="text-decoration-none">
                                                            üìç {{this.location_text}}
                                                        </a>
                                                    </span>
                                                {{/if}}
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="card-text">
                                        <p class="mb-3">{{this.text}}</p>
                                    </div>
                                    
                                    {{#if this.elevation}}
                                        <div class="alert alert-info py-2 mb-0" role="alert">
                                            <small><strong>Elevation:</strong> {{this.elevation}}m</small>
                                        </div>
                                    {{/if}}
                                </div>
                            </article>
                        {{/each}}
                    </div>
                </div>
            {{else}}
                <div class="text-center py-5">
                    <div class="alert alert-secondary" role="alert">
                        <h4 class="alert-heading">No posts found</h4>
                        <p class="mb-0">Be the first to share something!</p>
                    </div>
                </div>
            {{/if}}
        {{else}}
            <div class="text-center py-5">
                <div class="card bg-dark border-secondary">
                    <div class="card-body">
                        <h2 class="h3 mb-4 text-primary">Welcome to Soapstone</h2>
                        <a href="/login" class="btn btn-primary btn-lg px-5 py-3">
                            Login to Continue
                        </a>
                    </div>
                </div>
            </div>
        {{/if}}
    </section>
</div>
