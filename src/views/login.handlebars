<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card bg-dark border-secondary mt-5">
                <div class="card-header bg-transparent border-secondary text-center">
                    <h1 class="h3 text-primary mb-0">Login to Soapstone</h1>
                </div>
                <div class="card-body">
                    {{#if error}}
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>{{error}}
                        </div>
                    {{/if}}
                    
                    <form method="post" action="/login">
                        <div class="mb-3">
                            <label for="handle" class="form-label">Bluesky Handle</label>
                            <input 
                                type="text" 
                                id="handle" 
                                name="handle" 
                                class="form-control bg-dark border-secondary text-light"
                                placeholder="your-handle.bsky.social"
                                required
                            />
                            <div class="form-text text-muted">
                                Enter your Bluesky handle (e.g., alice.bsky.social or alice.com)
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100 mb-3">
                            Login with Bluesky
                        </button>
                    </form>
                    
                    <div class="text-center">
                        <small class="text-muted">
                            Don't have a Bluesky account? 
                            <a href="https://bsky.app" target="_blank" rel="noopener noreferrer" class="text-primary">
                                Sign up here
                            </a>
                        </small>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-secondary text-center">
                    <a href="/" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left me-1"></i>Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
